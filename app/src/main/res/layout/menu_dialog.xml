<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_version_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_refresh"
            style="@style/zhili_button"
            android:nextFocusDown="@+id/btn_clear_cache"
            android:nextFocusRight="@+id/btn_clear_cache"
            android:text="刷新菜单" />

        <Button
            android:id="@+id/btn_clear_cache"
            style="@style/zhili_button"
            android:nextFocusDown="@+id/btn_force_update"
            android:nextFocusLeft="@+id/btn_refresh"
            android:nextFocusRight="@+id/btn_force_update"
            android:nextFocusUp="@+id/btn_refresh"
            android:text="清除本地菜单缓存" />

        <Button
            android:id="@+id/btn_force_update"
            style="@style/zhili_button"
            android:nextFocusDown="@+id/btn_set_host"
            android:nextFocusLeft="@+id/btn_clear_cache"
            android:nextFocusRight="@+id/btn_set_host"
            android:nextFocusUp="@+id/btn_clear_cache"
            android:text="强制更新至服务器版本" />

        <Button
            android:id="@+id/btn_set_host"
            style="@style/zhili_button"
            android:gravity="center"
            android:nextFocusDown="@+id/btn_exit"
            android:nextFocusLeft="@+id/btn_clear_cache"
            android:nextFocusRight="@+id/btn_exit"
            android:nextFocusUp="@+id/btn_clear_cache"
            android:text="设置Host" />

        <Button
            android:id="@+id/btn_exit"
            style="@style/zhili_button"
            android:nextFocusLeft="@+id/btn_set_host"
            android:nextFocusUp="@+id/btn_set_host"
            android:text="退出程序" />
    </LinearLayout>

</ScrollView>