<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:nextFocusDown="@+id/edt_host"
        android:nextFocusRight="@+id/edt_host"
        android:text="设置Host"
        android:textIsSelectable="false"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_android_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:nextFocusDown="@+id/edt_host"
        android:nextFocusRight="@+id/edt_host"
        android:text="Android ID ="
        android:textIsSelectable="false"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_host"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:nextFocusDown="@+id/edt_host"
        android:nextFocusRight="@+id/edt_host"
        android:text="Current Host ="
        android:textIsSelectable="false"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edt_host"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:hint="只输入IP地址，例如183.6.131.219:9999"
        android:nextFocusDown="@+id/tv_positive"
        android:nextFocusRight="@+id/tv_positive"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <Button
            android:background="@drawable/selector_bg_button"
            android:id="@+id/tv_positive"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:nextFocusDown="@+id/tv_negative"
            android:nextFocusRight="@+id/tv_negative"
            android:text="确认"
            android:textSize="20sp" />

        <Button
            android:textColor="@android:color/white"
            android:id="@+id/tv_negative"
            android:layout_width="0dp"
            android:nextFocusDown="@+id/tv_reset"
            android:nextFocusRight="@+id/tv_reset"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/selector_bg_button"
            android:layout_marginRight="40dp"
            android:text="取消"
            android:textSize="20sp" />

        <Button
            android:textColor="@android:color/white"
            android:background="@drawable/selector_bg_button"
            android:id="@+id/tv_reset"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="重置Host"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>